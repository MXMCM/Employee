mixin employeeForm(url, employee, jobtitles, stateslist)

    form.employee-form(action=url method='post')
        div.name-row
            div.first
                lable(for='firstname') First Name:
                input(id='firstname' name='firstname' type='text' value=employee.firstname)
            div.last
                lable(for='lastname') Last Name:
                input(id='lastname' name='lastname' type='text' value=employee.lastname)

        lable(for='jobtitle') Job Title:
        select(id='jobtitle' name='jobtitle')
            each title in jobtitles
                option(value=title selected=employee.jobtitle===title) #{title}

        div.address
            div.streetline
                div.streetline1
                    lable(for='streetline1') Street Line 1:
                    input(id='streetline1' name='streetline1' type='text' value=employee.streetline1)

                div.streetline2
                    lable(for='streetline2') Street Line 2:
                    input(id='streetline2' name='streetline2' type='text' value=employee.streetline2)
            div.territory
                div.city
                    lable(for='city') City:
                    input(id='city' name='city' type='text' value=employee.city)

                div.state
                    lable(for='state') State:
                    select(id='state' name='state')
                        each state in stateslist
                            option(value=state selected=employee.state===state) #{state}
                div.zip
                    lable(for='zip') Zip Code:
                    input(id='zip' name='zip' type='text' value=employee.zip)

        div.personal-info-row
            div.phone
                lable(for='phonenumber') phonenumber:
                input(id='phonenumber' name='phonenumber' type='text' value=employee.phonenumber)

            div.year
                lable(for='yearhired') Year Hired:
                input(id='yearhired' name='yearhired' type='text' value=employee.yearhired)
        div.form-buttons
            a.button.cancel(href='/') Cancel
            if employee.id
                a.button.delete(href=`/delete/${employee.id}`) Delete Employee
            button.button.submit(type='submit') Submit
